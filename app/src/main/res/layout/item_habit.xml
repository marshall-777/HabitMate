<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textHabitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название привычки"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPeriodicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Периодичность"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата начала"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/textProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Прогресс: 0 / 0"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Редактировать"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDeleteHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Удалить"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>